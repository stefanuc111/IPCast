<?xml version="1.0" encoding="utf-8"?>
<it.SFApps.wifiqr.tool.CheckableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/azure_back" >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:scaleType="centerInside"
        android:src="@drawable/folder_icon" />

    <TextView
        android:id="@+id/textViewElementName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imageView"
        android:text="File Name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</it.SFApps.wifiqr.tool.CheckableRelativeLayout>
